<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fafafa"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip">
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="20dip">
           <CheckBox
               android:id="@+id/question_type_question"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:checked="true"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="遇到问题"/>
       </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip">
            <CheckBox
                android:id="@+id/question_type_suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新功能建议"/>
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.CardView
        app:contentPadding="10dip"
        app:cardBackgroundColor="@android:color/white"
        android:layout_width="match_parent"
        app:cardCornerRadius="8dip"
        android:layout_height="300dip"
        android:layout_margin="15dip">
        <EditText
            android:id="@+id/question_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:background="@null"
            android:hint="请详细描述您的问题"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="15sp" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_weight="1"
        android:padding="10dip"
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:layout_height="0dip">
        <Button
            android:id="@+id/question_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提交"
            android:background="@drawable/btn_bg_selector"
            android:layout_marginBottom="15dip"/>
    </LinearLayout>
</LinearLayout>